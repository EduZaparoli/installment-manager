datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
}

model PaymentSlip {
  paymentSlipId            Int                     @id @default(autoincrement())
  barCode                  String
  dueDate                  DateTime
  paymentSlipInstallmentId Int                     @unique
  PaymentSlipInstallment   PaymentSlipInstallment  @relation(fields: [paymentSlipInstallmentId], references: [paymentSlipInstallmentId], onDelete: Cascade)
}

model PaymentSlipInstallment {
  paymentSlipInstallmentId Int                     @id @default(autoincrement())
  paymentSlipId            Int                     @unique
  installmentIds           String                  
  totalAmount              Float                   
  PaymentSlip              PaymentSlip?
}