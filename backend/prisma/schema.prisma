// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int @id @default(autoincrement())
  first_name  String
  last_name   String
  email       String @unique
  password    String
}

model Paymentslip {
  paymentslipId Int       @id @default(autoincrement())
  orderId       Int
  codBarras     String    
  //order       //Order     @relation(fields: [orderId], references: [orderId], onDelete: Cascade)
}

model Paymentslipinstallment {
  paymentslipInstallmentId Int       @id @default(autoincrement())
  paymentslipId            Int
  installmentIds           Int       // IDs de parcelas selecionadas
  totalAmount              Float     // Valor total do boleto de pagamento
}